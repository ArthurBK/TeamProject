<%= simple_form_for(@bike) do |f| %>
  <%= f.error_notification %>

  <%= f.input :bike_type %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :displacement %>
  <%= f.input :year %>
  <%= f.input :mileage %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit %>
<% end %>
