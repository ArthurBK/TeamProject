  <%= f.input :bike_type, collection: [ "Moped", "Scooter", "Motorcycle"]%>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :displacement %>
  <%= f.input :year %>
  <%= f.input :mileage %>
  <%= f.input :address %>
  <%= f.input :description, as: :text %>
  <%= f.input :rate, label: "Daily rate (â‚¬)" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

