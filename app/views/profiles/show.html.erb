<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <div class="text-center">
        <%= cl_image_tag @profile.photo, height: 300, width: 200, radius: 20, crop: :fit %>
      </div>
      <div class="text-center">
        <h2><%= @profile.name %></h2>
        <p><%= @profile.address %></p>
        <p><%= @profile.phone_number %></p>
        <p><%= @profile.user.email %></p>
      </div>

  </div>
</div>
</div>
